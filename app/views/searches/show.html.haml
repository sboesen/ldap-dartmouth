.block
  .content
    - if @search.finished?
      = render @search.groups
    - else
      %h2.title= @search.groups_to_sentence
      %div.flash
        %div.message.notice
          %p= "Searching, refresh in a couple seconds..."

= link_to 'Edit Search', edit_search_path(@search)
\|
= link_to 'All Searches', searches_path
